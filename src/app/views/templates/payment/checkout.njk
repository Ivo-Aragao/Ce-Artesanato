{% extends "layout.njk" %}
{% import "partials/card.njk" as card %}

{% block styles %}
  <link rel="stylesheet" href="/styles/payment.css">
{% endblock %}

{% block content %}
  {% call card.render("Finalizar Pagamento", "payment-container") %}
    <div class="payment-methods">
      <div class="method active" data-method="credit-card">
        <i class="material-icons">credit_card</i>
        Cartão de Crédito
      </div>
      
      <div class="method" data-method="pix">
        <i class="material-icons">qr_code</i>
        PIX
      </div>
    </div>

    <form action="/payment/process" method="POST" class="payment-form credit-card">
      <div class="form-group">
        <label for="card-number">Número do Cartão</label>
        <input 
          type="tel" 
          id="card-number" 
          name="card_number"
          inputmode="numeric"
          pattern="[0-9\s]{13,19}" 
          placeholder="4242 4242 4242 4242"
          required
        >
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="expiry-date">Validade</label>
          <input 
            type="text" 
            id="expiry-date" 
            name="expiry_date"
            placeholder="MM/AA"
            pattern="(0[1-9]|1[0-2])\/[0-9]{2}"
            required
          >
        </div>

        <div class="form-group">
          <label for="cvc">CVC</label>
          <input 
            type="tel" 
            id="cvc" 
            name="cvc"
            inputmode="numeric"
            pattern="\d*"
            placeholder="123"
            maxlength="4"
            required
          >
        </div>
      </div>

      <div class="form-group">
        <label for="card-holder">Nome no Cartão</label>
        <input 
          type="text" 
          id="card-holder" 
          name="card_holder"
          placeholder="JOÃO DA SILVA"
          required
        >
      </div>

      <button type="submit" class="btn-payment">
        <i class="material-icons">lock</i>
        Pagar {{ total.formattedPrice }}
      </button>
    </form>

    <div class="security-info">
      <i class="material-icons">https</i>
      <span>Pagamento seguro com criptografia de 256-bit</span>
    </div>
  {% endcall %}
{% endblock %}

{% block scripts %}
  <script>
    document.querySelectorAll('.method').forEach(method => {
      method.addEventListener('click', () => {
        document.querySelectorAll('.method').forEach(m => m.classList.remove('active'));
        method.classList.add('active');
        document.querySelector('.payment-form').classList = `payment-form ${method.dataset.method}`;
      });
    });
  </script>
{% endblock %}